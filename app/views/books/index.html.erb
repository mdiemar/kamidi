<div class="row">
    <h1>Books</h1>
</div>
<div class="row" style="padding-bottom: 8px;">
  (Sortorder: <%= @sort_display %>)
</div>

<div class="row" style="padding-bottom: 8px;">
  <div class="col-sm" style="padding-left: 0px;">
    <span><input type="text" id="book_title_search_field" placeholder="Filter book-title" size="24"></span>
  </div>
  <div class="col-sm">
    <span></span>
  </div>
  <div class="col-sm">
    <span><input type="text" id="book_author_search_field" placeholder="Filter book-author" size="24"></span>
  </div>
</div>


<div class="row">

    <table class="table table-bordered table-sm">
        <thead class="thead-dark">
            <tr class="">
                <th class="">
                  <%= link_to "Title", {controller: "books", action: "index", :sort => "title"},data: { turbolinks: false }, :class => "text-light" %>
                </th>
                <th class="">Subtitle</th>
                <th class=""><%= link_to "Author", {controller: "books", action: "index", :sort => "author"},data: { turbolinks: false }, :class => "text-light" %></th>
                <th class=""><%= link_to "Year", {controller: "books", action: "index", :sort => "year"},data: { turbolinks: false }, :class => "text-light" %></th>
                <th class="">Media</th>
                <th class=""><%= link_to "New Book", new_book_path, class: "btn btn-light btn-sm" %></th>
            </tr>
        </thead>

        <tbody>
            <% @books.each do |book| %>
                <tr class="book">
                    <td class=""><%= book.title %></td>
                    <td class=""><%= book.subtitle %></td>
                    <td class=""><%= book.author %></td>
                    <td class=""><%= book.year %></td>
                    <td class=""><%= book.media %></td>
                    <td style='white-space: nowrap'>
                        <%= link_to "Show", book_path(book.id), class: "btn btn-outline-dark btn-sm" %>
                        <%= link_to "Edit", edit_book_path(book.id), class: "btn btn-outline-dark btn-sm" %>
                    </td>
                </tr>
            <% end %>
        <tbody>
    </table>

</div>

